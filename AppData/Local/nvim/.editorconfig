# Root EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript & JSX/TSX files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single  # used by Prettier if configured
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

# JSON & YAML (trimming trailing white space is often invalid in YAML)
[*.{json,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

# Markdown files (avoid trimming whitespace)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
